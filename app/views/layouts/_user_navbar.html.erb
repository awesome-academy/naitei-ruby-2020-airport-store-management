  <header class="header container" id="navbar-header">
    <div class="user_navbar_header_left">
      <span class="logo"><%= link_to t(".logo"), root_path, class: "nav-link" %></span>
      <span class="navbar">
        <ul>
          <li><%= link_to t(".profile"), "#" %></li>
          <li>
            <% if logged_in? %>
              <%= link_to t(".my_stores"), stores_path(current_user) %>
            <% else %>
              <%= link_to t(".my_stores"), login_path %>
            <% end %>
          </li>
          <li><%= link_to t(".references"), "#" %></li>
        </ul>
      </span>
    </div>
    <div class="navbar-right row">
      <div class="contactUs col-3">
        <div class="dropdown">
          <%= link_to "#", class: "nav-link", data: {toggle: "dropdown"} do%>
            <% if I18n.locale == :en %>
              <i class="flag-icon flag-icon-us"></i>
            <% else %>
              <i class="flag-icon flag-icon-vn"></i>
            <% end %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right p-0">
            <%= link_to t(".english"), {locale: :en}, class: "dropdown-item", id: "language-dropdown" %>
            <%= link_to t(".vietnamese"), {locale: :vi}, class: "dropdown-item", id: "language-dropdown" %>
          </div>
        </div>
      </div>
      <div class="contactUs col-3 pt-4">
        <div class="nav-item dropdown">
          <div class="nav-link" data-toggle="dropdown" id="notification_button">
            <i class="far fa-bell"></i>
            <% if logged_in? %>
              <% if user_unread_noti_quantity("User") > 0 %>
                <span class="badge badge-warning navbar-badge" id=<%= "notification_user_#{current_user.id}" %>><%= user_unread_noti_quantity("User") %></span>
              <% end %>
            <% end %>
          </div>
          <div class="d-none" id="notification_url">
            <%= notifications_path %>
          </div>
          <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" id="notification_dropdown">
          </div>
        </div>
      </div>
      <div class="saved col-6">
        <% if logged_in? %>
          <div class="d-sm-inline-block login_btn">
            <%= link_to t(".logout"), logout_path, class: "nav-link" %>
          </div>
        <% else %>
          <div class="nav-item d-none d-sm-inline-block">
            <%= link_to t(".login"), login_path, class: "nav-link" %>
          </div>
        <% end %>
      </div>
    </div>
  </header>
