<% provide :title, t(".title") %>
<body class="hold-transition login-page">
  <%= toastr_flash %>
  <div id="custom_nav">
    <%= render "shared/custom_navbar" %>
  </div>
  <div class="login-box">
    <div class="card">
      <div class="card-body login-card-body">
        <div class="login-logo">
          <b><%= t ".title" %></b>
        </div>
        <p class="login-box-msg"><%= t(".sign_in") %></p>
        <%= form_for :session, url: login_path do |f| %>
          <div class="input-group mb-3">
            <%= f.email_field :email, required: true, class: "form-control", placeholder: t(".email") %>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <%= f.password_field :password, required: true, class: "form-control", placeholder: t(".password") %>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me, id: "remember" %>
                <span><%= t ".remember_me" %></span>
              <% end %>
            </div>
            <div class="col-6 text-right">
              <%= link_to t(".forgot_password"), "#" %>
            </div>
          </div>
          <div class="row mt-1">
            <div class="col-6">
              <div class="icheck-primary">
                <%= link_to t(".sign_up"), signup_path, class: "btn btn-success btn-block" %>
              </div>
            </div>
            <div class="col-6">
              <div class="icheck-primary">
                <%= f.submit t(".submit"), class: "btn btn-primary btn-block" %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="social-auth-links text-center mb-3">
          <p><%= t ".sign_in_with" %></p>
          <div class="row">
            <div class="col-6">
              <%= link_to "#", class: "btn btn-block btn-primary" do %>
                <i class="fab fa-facebook mr-2"></i>
                <%= t ".facebook_signup" %>
              <% end %>
            </div>
            <div class="col-6">
              <%= link_to "#", class: "btn btn-block btn-danger" do %>
                <i class="fab fa-google mr-2"></i>
                <%= t ".google_signup" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
