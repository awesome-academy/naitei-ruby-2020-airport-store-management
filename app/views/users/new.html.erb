<% provide :title, t(".title") %>
<body class="hold-transition register-page">
  <div id="custom_nav">
    <%= render "shared/custom_navbar" %>
  </div>
  <div class="register-box">
    <div class="card">
      <div class="card-body register-card-body">
        <div class="register-logo">
          <b><%= t ".title" %></b>
        </div>
        <p class="register-box-msg"><%= t ".register" %></p>
        <%= form_for @user do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="row">
            <div class="col-6">
              <%= f.label :name, t(".full_name"), class: "required" %>
              <div class="input-group mb-2">
                <%= f.text_field :name, class: "form-control", placeholder: t(".full_name") %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-user"></span>
                  </div>
                </div>
              </div>
              <%= f.label :name, t(".password"), class: "required" %>
              <div class="input-group mb-2">
                <%= f.password_field :password, class: "form-control", placeholder: t(".password") %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
              </div>
              <%= f.label :name, t(".company_name"), class: "required" %>
              <div class="input-group mb-2">
                <%= f.text_field :company_name, class: "form-control", placeholder: t(".company_name") %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-building"></span>
                  </div>
                </div>
              </div>
              <%= f.label :name, t(".phone_number"), class: "required" %>
              <div class="input-group mb-2">
                <%= f.text_field :phone_number, class: "form-control", placeholder: t(".phone_number") %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-phone"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-6">
              <%= f.label :name, t(".email"), class: "required" %>
              <div class="input-group mb-2">
                <%= f.email_field :email, class: "form-control", placeholder: t(".email") %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                  </div>
                </div>
              </div>
              <%= f.label :name, t(".retype_password"), class: "required" %>
              <div class="input-group mb-2">
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".retype_password") %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
              </div>
              <%= f.label :name, t(".identity_number"), class: "required" %>
              <div class="input-group mb-2">
                <%= f.text_field :identity_number, class: "form-control", placeholder: t(".identity_number") %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-address-card"></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="text-center mt-3">
            <%= f.submit t(".submit"), class: "btn btn-block btn-primary" %>
          </div>
        <% end %>
        <p class="mt-2 mb-0">
          <%= link_to t(".had_membership"), login_path, class: "text-center" %>
        </p>
      </div>
    </div>
  </div>
</body>
