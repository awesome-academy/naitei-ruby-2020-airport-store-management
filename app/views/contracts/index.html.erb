<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1><%= t ".contracts" %></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item">
            <%= link_to t(".home"), root_path %>
          </li>
          <li class="breadcrumb-item active"><%=  t ".contracts" %></li>
        </ol>
      </div>
    </div>
  </div>
</section>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body table-responsive p-0">
            <table class="table table-striped table-hover table-bordered padding-margin-0">
              <thead>
                <tr>
                  <th><%= t ".id" %></th>
                  <th><%= t ".store" %></th>
                  <th><%= t ".terminal" %></th>
                  <th><%= t ".user" %></th>
                  <th><%= t ".status" %></th>
                  <th><%= t ".start_date" %></th>
                  <th><%= t ".end_date" %></th>
                  <th class="text-center"><%= t ".actions" %></th>
                </tr>
              </thead>
              <tbody>
                <%= render @contracts %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-row-reverse">
      <%= paginate @contracts, theme: "twitter-bootstrap-4" %>
    </div>
  </div>
</section>
